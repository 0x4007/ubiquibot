{
  "name": "ubiquibot",
  "version": "1.0.0",
  "private": true,
  "description": "A Probot app",
  "author": "Ubiquity DAO",
  "license": "ISC",
  "homepage": "https://github.com//",
  "keywords": [
    "probot",
    "github",
    "probot-app"
  ],
  "scripts": {
    "build:local": "tsc",
    "build:serverless": "ncc build src/index.ts -o dist",
    "clean": "rimraf ./dist ./lib ./node_modules",
    "start:serverless": "probot run ./dist/index.js",
    "start:local": "probot run ./lib/main.js",
    "start:local:watch": "nodemon --exec 'yarn start:local'",
    "prettier": "prettier --write src",
    "prettier:check": "prettier -c src/**/*.ts",
    "_commit:watch": "nodemon --exec 'git add . && git commit -am \"update(ci)\" && git push'",
    "prepare": "husky install"
  },
  "dependencies": {
    "@probot/adapter-github-actions": "^3.1.3",
    "@vercel/ncc": "^0.34.0",
    "husky": "^8.0.2",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "probot": "^12.2.4"
  },
  "devDependencies": {
    "@types/jest": "^28.1.0",
    "@types/node": "^18.0.0",
    "@types/source-map-support": "^0.5.6",
    "jest": "^26.6.3",
    "nock": "^13.0.5",
    "smee-client": "^1.2.2",
    "source-map-support": "^0.5.21",
    "ts-jest": "^26.4.4",
    "typescript": "^4.8.4",
    "rimraf": "3.0.2"
  },
  "engines": {
    "node": ">= 10.13.0"
  }
}
