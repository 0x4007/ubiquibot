{
  "name": "ubiquibot",
  "version": "0.1.0-rc6",
  "description": "Enables Ubiquity DevPool automation in your repository.",
  "author": "Ubiquity DAO",
  "license": "ISC",
  "homepage": "https://github.com/ubiquity/bounty-bot.git",
  "keywords": [
    "probot",
    "github",
    "probot-app"
  ],
  "scripts": {
    "build": "tsc",
    "build:ci": "ncc build src/index.ts -o dist && mv ./dist/index.js ./bin",
    "prestart": "rimraf dist/ lib/",
    "start": "probot run ./lib/main.js",
    "start:watch": "nodemon --exec 'yarn start'",
    "format": "prettier --write src",
    "format:check": "prettier -c src/**/*.ts",
    "clean": "rimraf ./dist ./lib ./node_modules",
    "prepare": "husky install"
  },
  "dependencies": {
    "@probot/adapter-github-actions": "^3.1.3",
    "@sinclair/typebox": "^0.25.21",
    "@supabase/supabase-js": "^2.7.1",
    "@vercel/ncc": "^0.36.1",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.1",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.4",
    "probot": "^12.3.0",
    "telegraf": "^4.11.2"
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/node": "^18.13.0",
    "@types/source-map-support": "^0.5.6",
    "jest": "^29.4.2",
    "nock": "^13.3.0",
    "rimraf": "^4.1.2",
    "smee-client": "^1.2.3",
    "source-map-support": "^0.5.21",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  },
  "engines": {
    "node": ">= 16.15.0",
    "npm": ">= 8.1.4"
  },
  "lint-staged": {
    "*.{ts,json}": [
      "prettier --write"
    ]
  }
}
